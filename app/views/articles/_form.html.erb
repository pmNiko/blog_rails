<%flash.each do |name, msg|%>
    <%= content_tag(:div,msg, :class => "flash_#{name}")%>
<%end%>
    
<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title%>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<%end%>

<%= link_to 'Back to Index', articles_path %>
